{% extends 'base.html.twig' %}
{% block content %}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <div class="inner-heading">
                        <h2>Calendrier des évènements 2018</h2>
                    </div>
                </div>
                <div class="span4">
                    <ul class="breadcrumb">
                        <li><a href="{{ path('homepage') }}"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                        <li class="active">Calendrier</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="content">
        <div class="container">


            <div class="row">

                <div class="span12">

                    <table class="table table-hover">
                        <thead>
                        <tr>

                            <th>
                                Evènement
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Heure
                            </th>
                            <th>
                                Lieu
                            </th>
                            <th>
                                Ville
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                        <tr>

                            <td>
                                {{ event.name }}
                            </td>
                            <td>
                                {{ event.date|date('d/m/Y') }}
                            </td>
                            <td>
                                {{ event.time|date('H:i') }}
                            </td>
                            <td>
                                {{ event.place }}
                            </td>
                            <td>
                                {{ event.town }}
                            </td>
                        </tr>
                            {% endfor %}


                        </tbody>
                    </table>
                </div>
            </div>
            </div>

    </section>
{% endblock %}