                <img src="{{ asset('img/slides/nivo/medailles.jpg') }}" alt="" title="#caption-1"/>
                <!-- Slide #2 image -->
                <img src="{{ asset('img/slides/nivo/cayenne.jpg') }}" alt="" title="#caption-2"/>
                <!-- Slide #3 image -->
                <img src="{{ asset('img/slides/nivo/coq.jpg') }}" alt="" title="#caption-3"/>
            </div>
